{
  "include": ["src/*.ts", "test/*.spec.ts"],
  "exclude": ["node_modules", "test/*.spec.ts"],
  "compilerOptions": {
    "types": ["mocha", "node"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "lib": ["ES2015", "DOM"],
    "declarationDir": "dist/types/",
    "declaration": true
  }
}
